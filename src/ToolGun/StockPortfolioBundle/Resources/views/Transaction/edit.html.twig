    {% if instruments is not empty %}
        {{ form_start(edit_form) }}
        {{ form_widget(edit_form) }}
        <input type="submit" value="Edit"/>
        {{ form_end(edit_form) }}
    {% else %}
        <p>Please add instruments</p>
    {% endif %}

    <ul>
        <li>
            <a href="{{ path('transaction_index') }}">Back to the list</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
