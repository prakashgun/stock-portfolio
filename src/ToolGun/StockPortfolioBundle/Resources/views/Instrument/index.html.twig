{% extends 'base.html.twig' %}

{% block body %}
    <h1>Instruments list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Ticker</th>
                <th>Name</th>
                <th>Currentprice</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for instrument in instruments %}
            <tr>
                <td><a href="{{ path('instrument_show', { 'id': instrument.id }) }}">{{ instrument.id }}</a></td>
                <td>{{ instrument.ticker }}</td>
                <td>{{ instrument.name }}</td>
                <td>{{ instrument.currentPrice }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('instrument_show', { 'id': instrument.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('instrument_edit', { 'id': instrument.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('instrument_new') }}">Create a new instrument</a>
        </li>
    </ul>
{% endblock %}
